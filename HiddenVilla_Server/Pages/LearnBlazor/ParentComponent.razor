            <ChildContent>
                Render Fragment from parent! WoHoo!
            </ChildContent>
            @*<DangerChildContent>
                    Danger Render Fragment from parent! WoHoo!
                </DangerChildContent>*@

        </ChildComponent>
    </CascadingValue>
</CascadingValue>

    <AnotherChildComponent placeholder="Placeholder default">

    </AnotherChildComponent>
    <p><b>@messageText</b></p>

    @code{
        private string MessageForGrandChild = "This is a message from grand parent";
        private string LuckyNumber { get; set; } = "7";
        private string messageText = "";
        private void ShowMessage(MouseEventArgs e)
        {
            messageText = "Blazzing text from Child comp into param";
        }



    }
